# Database
DATABASE_URL="postgresql://user:password@localhost:5432/apihunter?schema=public"

# Application
NODE_ENV="development"
PORT=3000

# Security
ENCRYPTION_KEY="change-this-to-a-secure-random-32-char-key-for-production"
SECRET_FINGERPRINT_SALT="change-this-to-a-secure-random-salt"

# Optional: HTTP Proxy for routing through security tools
HTTP_PROXY=""
HTTPS_PROXY=""

# Optional: Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Optional: Enable/Disable Features
ENABLE_HISTORY=true
ENABLE_ENCRYPTION=true
